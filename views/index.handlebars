
<div class="col-md-10 col-md-offset-1">
  <div id="maintitle">
    <h1 style="center"> WELCOME TO THE BURGER APP!</h1>
  </div>
  <h2 class="uneaten-title">Current Burgers</h2>
  <ul class="uneaten">
    <img id="denverburger" src="./img/denverburger.jpeg" width="100px" height="100px">
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          <img src="./img/burger.jpeg" width="100px" height="100px">
          <p>
            {{this.burger_name}}
          </p>
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn btn-default" style="background-color:black; color:yellow; padding: 15px">Eat it!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
  <img id="ghost" src="./img/mushroom.jpeg" width="100px" height="100px">
</div>

<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-4" id="update">
      <br><br><br>
        <form class="create-update-form" action="burgers/create" method="POST">
          <h2 class="add-title">Add a Burger</h2>
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="hidden" name="devoured" value="0">
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-default" style="background-color:black; color:yellow">Add Burger</button>
        </form>
      </div>
    </div>

    <div class="col-md-4" id="eaten">
      <br><br><br>
      <h2 class="eaten-title">Eaten Burgers</h2>
      <ul class="burgers-eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
               <img src="./img/burger.jpeg" width="100px">
              <p>
                {{this.burger_name}}
              </p>
            </li>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
             <p id="finishedburger">The burger has been devoured!</p>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
</div>

